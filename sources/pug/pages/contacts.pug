extends ../_skeleton

block variables
	- pageName = 'Contacts'

block page
	include ../sections/_header-classic

	+breadcrumbs({
		title: false,
		mode: 'simple-breadcrumbs mode-2'
	})

	//Mailform
	section.section.section-md
		.container
			.row.row-50.row-narrow-50
				.col-lg-6
					.pre-title come visit us
					h2  How to find us
					p.text-sm We invite you to come just as you are and be a part of our community of people who are striving together to discover God’s purpose and plan for their lives!
					ul.contact-list.offset-xl-50
						li 178 West 27th Street New York, NY 10012
						li: a.phone.ml-0(href="tel:#") +1 (256) 10 87 000
						li: a.ml-0.link-secondary(href="mailto:#") info@demolink.org
					ul.social-list.offset-xl-50.social-list-md
						li: a(href="#"): span.icon.fa.fa-youtube-play
						li: a(href="#"): span.icon.fa.fa-twitter
						li: a(href="#"): span.icon.fa.fa-facebook-f
						li: a(href="#"): span.icon.fa.fa-rss
				.col-lg-6
					.pre-title Get in touch
					h2 We want to hear from you
					p.text-sm If you have a question, a request, or a story to share with us, we’d love to hear from you!
					//RD Mailform
					form.rd-mailform.text-left.contact-form(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
						.form-wrap
							label.form-label(for="contact-name") Enter your name:
							input#contact-name.form-input(type="text" name="name" data-constraints='@Required')
						.form-wrap
							label.form-label(for="contact-email") Enter your email:
							input#contact-email.form-input(type="email" name="email" data-constraints='@Required @Email')
						.form-wrap
							label.form-label(for="contact-message") Your message:
							textarea#contact-message.form-input(name="message" data-constraints='@Required')
						.form-button.group-sm.text-center.text-lg-left
							button(type="submit").shadow.btn.btn-icon.btn-icon-right.btn-primary.btn-svg.offset-xl-50.wow.fadeInUp
								span.svg-icon
									svg(xmlns='http://www.w3.org/2000/svg' width='18' height='10' viewbox='0 0 18 10' fill='#fff')
										path(d='M13 10V6H0V4H13V0L18 5L13 10Z' fill='')
								span Send message

	//Google Map
	section.section
		//Please, add the data attribute data-key="YOUR_API_KEY" in order to insert your own API key for the Google map.
		//Please note that YOUR_API_KEY should replaced with your key.
		//Example: <div class="google-map-container" data-key="YOUR_API_KEY">
		.google-map-container( data-center='9870 St Vincent Place, Glasgow, DC 45 Fr 45.', data-zoom='5', data-icon='images/gmap_marker.png', data-icon-active='images/gmap_marker_active.png', data-styles='[{"featureType":"landscape","stylers":[{"saturation":-100},{"lightness":60}]},{"featureType":"road.local","stylers":[{"saturation":-100},{"lightness":40},{"visibility":"on"}]},{"featureType":"transit","stylers":[{"saturation":-100},{"visibility":"simplified"}]},{"featureType":"administrative.province","stylers":[{"visibility":"off"}]},{"featureType":"water","stylers":[{"visibility":"on"},{"lightness":30}]},{"featureType":"road.highway","elementType":"geometry.fill","stylers":[{"color":"#ef8c25"},{"lightness":40}]},{"featureType":"road.highway","elementType":"geometry.stroke","stylers":[{"visibility":"off"}]},{"featureType":"poi.park","elementType":"geometry.fill","stylers":[{"color":"#b6c54c"},{"lightness":40},{"saturation":-40}]},{}]' )
			.google-map
			ul.google-map-markers
				li( data-location='9870 St Vincent Place, Glasgow, DC 45 Fr 45.', data-description='9870 St Vincent Place, Glasgow' )

	include ../sections/_footer-classic
